generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  date      String
  yacht     String
  message   String?
  createdAt DateTime @default(now())
}

model Listing {
  id          Int      @id @default(autoincrement())
  yachtName   String
  ownerName   String
  email       String
  phone       String
  length      Int
  guests      Int
  description String
  photo       String?   // URL or filename, implementation later
  createdAt   DateTime @default(now())
}
